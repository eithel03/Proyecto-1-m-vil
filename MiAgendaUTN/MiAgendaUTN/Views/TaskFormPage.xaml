<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:MiAgendaUTN.ViewModels"
    x:Class="MiAgendaUTN.Views.TaskFormPage"
    Title="Nueva Tarea"
    x:Name="TaskFormRoot"
    
    BindingContext="{StaticResource TaskVM}">


        <ScrollView>
        <VerticalStackLayout Padding="20">

            <Label Text="Título:" />
            <Entry Text="{Binding Title}" Placeholder="Ej: Estudiar para examen" />

            <Label Text="Descripción:" />
            <Editor Text="{Binding Description}" Placeholder="Detalles de la tarea" />

            <Label Text="Fecha límite:" />
            <DatePicker Date="{Binding DueDate}" />

            <Button
            Text="Agregar Tarea"
            Command="{Binding AddOrUpdateTaskCommand}" />


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
