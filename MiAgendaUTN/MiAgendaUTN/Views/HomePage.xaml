<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiAgendaUTN.Views.HomePage"
             Title="Inicio">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- TÃ­tulo -->
            <Label Text="Bienvenido a Mi Agenda UTN"
                   FontSize="24"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <!-- Panel resumen de tareas -->
            <VerticalStackLayout Spacing="16">

                <!-- Tarjetas de estadÃ­sticas -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                    <Frame Padding="12" HasShadow="False" CornerRadius="14" 
                           BackgroundColor="{AppThemeBinding Light=#F4F6FF, Dark=#1E1E1E}">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Pendientes" FontSize="12" Opacity="0.7"/>
                            <Label Text="{Binding PendingCount}" FontSize="22" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Column="1" Padding="12" HasShadow="False" CornerRadius="14" 
                           BackgroundColor="{AppThemeBinding Light=#F9FFF4, Dark=#202B1F}">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Para hoy" FontSize="12" Opacity="0.7"/>
                            <Label Text="{Binding DueTodayCount}" FontSize="22" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Column="2" Padding="12" HasShadow="False" CornerRadius="14" 
                           BackgroundColor="{AppThemeBinding Light=#FFF7F4, Dark=#2B1F1F}">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Completadas" FontSize="12" Opacity="0.7"/>
                            <Label Text="{Binding CompletedCount}" FontSize="22" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- PrÃ³xima tarea -->
                <Frame Padding="14" HasShadow="False" CornerRadius="16"
                       BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                       BorderColor="{AppThemeBinding Light=#E8E8E8, Dark=#2A2A2A}">
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Spacing="2">
                            <Label Text="PrÃ³xima tarea" FontSize="12" Opacity="0.7"/>
                            <Label FontSize="18" FontAttributes="Bold">
                                <Label.Text>
                                    <Binding Path="NextTask.Title" />
                                </Label.Text>
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding NextTask}" Value="{x:Null}">
                                        <Setter Property="Text" Value="Sin tareas prÃ³ximas" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                            <Label FontSize="12" Opacity="0.8">
                                <Label.Text>
                                    <MultiBinding StringFormat="{}{0:dd/MM/yyyy HH:mm}">
                                        <Binding Path="NextTask.DueDate"/>
                                    </MultiBinding>
                                </Label.Text>
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding NextTask.DueDate}" Value="{x:Null}">
                                        <Setter Property="Text" Value="â€”" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </VerticalStackLayout>

                        <Button Grid.Column="1"
                                Text="Agregar tarea"
                                HorizontalOptions="End"
                                VerticalOptions="Center"
                                Command="{Binding GoToNuevaTareaCommand}" />
                    </Grid>
                </Frame>

                <!-- PrÃ³ximas 3 -->
                <Label Text="PrÃ³ximas tareas" FontAttributes="Bold" FontSize="16" />
                <CollectionView ItemsSource="{Binding UpcomingTasks}">
                    <CollectionView.EmptyView>
                        <Grid Padding="10">
                            <Label Text="Â¡Nada por aquÃ­! Agrega tu primera tarea ðŸ‘‡"
                                   HorizontalTextAlignment="Center" Opacity="0.7"/>
                        </Grid>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="12" Margin="0,0,0,8" HasShadow="False" CornerRadius="12"
                                   BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                                   BorderColor="{AppThemeBinding Light=#EEEEEE, Dark=#2A2A2A}">
                                <Grid ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="{Binding Title}" FontAttributes="Bold" />
                                        <Label Text="{Binding DueDate, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                               FontSize="12" Opacity="0.8"/>
                                    </VerticalStackLayout>
                                    <CheckBox Grid.Column="1" IsChecked="{Binding IsCompleted}" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <BoxView HeightRequest="12"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
