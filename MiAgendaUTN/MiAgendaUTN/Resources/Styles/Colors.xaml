<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="Primary">#0D47A1</Color>
    <Color x:Key="Secondary">#42A5F5</Color>
    <Color x:Key="Tertiary">#1565C0</Color>

    <Color x:Key="PrimaryText">#1A237E</Color>
    <Color x:Key="SecondaryText">#E3F2FD</Color>

    <Color x:Key="BackgroundLight">#F5F8FF</Color>
    <Color x:Key="BackgroundDark">#0D1B2A</Color>

    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="AccentBlue">#00BCD4</Color>
    <Color x:Key="DangerRed">#C62828</Color>

    <Color x:Key="Gray100">#E8F1FF</Color>
    <Color x:Key="Gray200">#CFE2F3</Color>
    <Color x:Key="Gray300">#A9C2D9</Color>
    <Color x:Key="Gray400">#8DA0B4</Color>
    <Color x:Key="Gray500">#6B7C8F</Color>
    <Color x:Key="Gray600">#46586B</Color>
    <Color x:Key="Gray900">#233446</Color>
    <Color x:Key="Gray950">#121C26</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryText}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryText}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
</ResourceDictionary>