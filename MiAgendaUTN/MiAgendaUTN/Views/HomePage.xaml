<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiAgendaUTN.Views.HomePage"
             Title="Inicio">

    <ContentPage.Resources>
        <Color x:Key="RebelBlue">#0D47A1</Color>
        <Color x:Key="RebelAccent">#FFEB3B</Color> <Color x:Key="RebelHighlight">#C2185B</Color> <Color x:Key="RebelDarkBg">#121212</Color>
        <Color x:Key="RebelLightBg">#F0F4FF</Color>

        <Style x:Key="RebelButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource RebelAccent}" />
            <Setter Property="TextColor" Value="{StaticResource RebelBlue}" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="Padding" Value="12, 6" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="Bienvenido a Mi Agenda UTN"
                   FontSize="28"
                   FontAttributes="Bold, Italic"
                   TextColor="{StaticResource RebelBlue}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <VerticalStackLayout Spacing="18">
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                    
                    <Frame Padding="12" HasShadow="True" CornerRadius="14" BorderColor="#42A5F5"
                           BackgroundColor="{AppThemeBinding Light={StaticResource RebelLightBg}, Dark={StaticResource RebelDarkBg}}">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Pendientes" FontSize="12" Opacity="0.8" TextColor="{StaticResource RebelBlue}"/>
                            <Label Text="{Binding PendingCount}" FontSize="24" FontAttributes="Bold" TextColor="{StaticResource RebelBlue}"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Column="1" Padding="12" HasShadow="True" CornerRadius="14" BorderColor="{StaticResource RebelAccent}"
                           BackgroundColor="{AppThemeBinding Light=#FFFDE7, Dark={StaticResource RebelDarkBg}}">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Â¡Para hoy!" FontSize="12" Opacity="0.8" TextColor="{StaticResource RebelAccent}"/>
                            <Label Text="{Binding DueTodayCount}" FontSize="24" FontAttributes="Bold" TextColor="{StaticResource RebelAccent}"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Column="2" Padding="12" HasShadow="True" CornerRadius="14" BorderColor="{StaticResource RebelHighlight}"
                           BackgroundColor="{AppThemeBinding Light=#FFF3F9, Dark={StaticResource RebelDarkBg}}">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Hechas" FontSize="12" Opacity="0.8" TextColor="{StaticResource RebelHighlight}"/>
                            <Label Text="{Binding CompletedCount}" FontSize="24" FontAttributes="Bold" TextColor="{StaticResource RebelHighlight}"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <Frame Padding="16" HasShadow="True" CornerRadius="16"
                       BackgroundColor="{AppThemeBinding Light={StaticResource RebelBlue}, Dark={StaticResource RebelBlue}}"
                       BorderColor="{StaticResource RebelAccent}">
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Spacing="2">
                            <Label Text="PrÃ³xima tarea clave" FontSize="14" Opacity="0.9" TextColor="White"/>
                            <Label FontSize="20" FontAttributes="Bold" TextColor="{StaticResource RebelAccent}">
                                <Label.Text>
                                    <Binding Path="NextTask.Title" />
                                </Label.Text>
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding NextTask}" Value="{x:Null}">
                                        <Setter Property="Text" Value="Â¡Libre! Agrega algo Ã©pico" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                            <Label FontSize="13" Opacity="0.9" TextColor="White">
                                <Label.Text>
                                    <MultiBinding StringFormat="{}{0:dd/MM/yyyy @ HH:mm}">
                                        <Binding Path="NextTask.DueDate"/>
                                    </MultiBinding>
                                </Label.Text>
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding NextTask.DueDate}" Value="{x:Null}">
                                        <Setter Property="Text" Value="â€”" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </VerticalStackLayout>

                        <Button Grid.Column="1"
                                Text="Agregar tarea âž•"
                                Style="{StaticResource RebelButtonStyle}"
                                HorizontalOptions="End"
                                VerticalOptions="Center"
                                Command="{Binding GoToNuevaTareaCommand}" />
                    </Grid>
                </Frame>

                <Label Text="Tus PrÃ³ximos Golpes" FontAttributes="Bold" FontSize="18" TextColor="{StaticResource RebelBlue}" Margin="0, 10, 0, 0" />
                <CollectionView ItemsSource="{Binding UpcomingTasks}">
                    <CollectionView.EmptyView>
                        <Grid Padding="10">
                            <Label Text="Â¡Nada por aquÃ­! Tienes vÃ­a libre ðŸš€"
                                   HorizontalTextAlignment="Center" FontAttributes="Italic" Opacity="0.7"/>
                        </Grid>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="12" Margin="0,0,0,10" HasShadow="False" CornerRadius="12"
                                   BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark={StaticResource RebelDarkBg}}"
                                   BorderColor="{AppThemeBinding Light=#EEEEEE, Dark=#2A2A2A}">
                                <Grid ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="{Binding Title}" FontAttributes="Bold" TextColor="{StaticResource RebelHighlight}" />
                                        <Label Text="{Binding DueDate, StringFormat='Fecha LÃ­mite: {0:dd/MM/yyyy HH:mm}'}"
                                               FontSize="12" Opacity="0.8"/>
                                    </VerticalStackLayout>
                                    <CheckBox Grid.Column="1" IsChecked="{Binding IsCompleted}" Color="{StaticResource RebelAccent}" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <BoxView HeightRequest="12"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
    
     </ContentPage>