<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MiAgendaUTN"
    xmlns:views="clr-namespace:MiAgendaUTN.Views;assembly=MiAgendaUTN"
    x:Class="MiAgendaUTN.AppShell">

    <Shell.TitleView>
        <Label Text="Mi Agenda UTN"
               FontAttributes="Bold"
               FontSize="18"
               VerticalOptions="Center"
               HorizontalOptions="Center" />
    </Shell.TitleView>

    <TabBar>
        <ShellContent Title="Inicio"
                      ContentTemplate="{DataTemplate views:HomePage}" />

        <ShellContent Title="Tareas"
                      ContentTemplate="{DataTemplate views:TasksPage}" />

        <ShellContent Title="Nueva Tarea"
                      ContentTemplate="{DataTemplate views:TaskFormPage}" />

        <ShellContent Title="Ajustes"
                      ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>
</Shell>
